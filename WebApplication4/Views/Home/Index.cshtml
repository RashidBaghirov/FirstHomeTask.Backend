@using WebApplication4.ViewModels
@model TogetherVM


<section class="my-5">

    <h1 class="text-center">
        Specialty
    </h1>
    <div class="container">
        <div class="row justify-content-center">

            @foreach (var item in Model.Categories)
            {
                <div class="card text-bg-dark my-3">
                    <img src="@item.Image" class="card-img" alt="..." style="object-fit:contain">
                    <div class="card-img-overlay">
                        <h3 class="card-title">@item.Name</h3>
                        <p class="card-text">@item.Description</p>

                    </div>
                </div>
            }

        </div>
    </div>
</section>

<section class="my-5">
    <h1 class="text-center">
       Teachers
    </h1>
    <div class="container">

        @foreach (var item in Model.Teachers)
            {
                <div class="card my-3">
                    <div class="row ">
                        <div class="col-4">
                        <a href="https://localhost:7044/teacher/detail">
                            <img src="@item.Image" class="img-fluid rounded-start" alt="...">
                            </a>
                        </div>
                        <div class="col-8">
                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text">@item.Description</p>
                                <p class="card-text"><small class="text-muted">@item.Profession</small></p>
                            </div>
                        </div>
                    </div>
                </div>
            }
   
    </div>
</section>

